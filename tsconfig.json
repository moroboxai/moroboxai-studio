{
	"compilerOptions": {
		"module": "commonjs",
        "target": "esnext",
        "moduleResolution": "node",
		"esModuleInterop": true,
        "resolveJsonModule": true,
		"declaration": false,
		"noImplicitAny": false,
		"removeComments": true,
		"sourceMap": true,
		"allowJs": true,
		"jsx": "react"
	},
    "include": ["app/**/*"]
}